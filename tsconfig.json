{
    "compilerOptions": {
        "baseUrl": "./",
        "module": "esnext",
        "target": "es2015",
        "moduleResolution": "node",
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "outDir": "dist/lib",
        "sourceMap": true,
        "lib": ["dom", "es2018"],
        "typeRoots": [
            "node_modules/@types"
        ],
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
